<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_all"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/pass_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_number"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
     >

        <ImageView
            android:id="@+id/iv_item_num0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/num_0" />

        <ImageView
            android:id="@+id/iv_item_num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/num_0" />

        <ImageView
            android:id="@+id/iv_item_num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/num_6" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_item_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:layout_centerVertical="true"
        android:src="@drawable/point0"
        android:layout_alignTop="@+id/ll_number"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp" />

    <TextView
        android:text="TextView"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_info"
       />

</RelativeLayout>